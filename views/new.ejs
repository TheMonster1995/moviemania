<% include partials/header %>

<div class="container">
    <form action="/movies/" method="POST">
        <div class="form-group">
            <label>
                Title
                <input type="text" class="form-control" placeholder="The Movie Title ..." name="movie[title]">
            </label>
        </div>
        <div class="form-group">
            <label>
                Image Url
                <input type="text" class="form-control" placeholder="The Movie Image Title ..." name="movie[imgURL]">
            </label>
        </div>
        <div class="form-group">
            <label>
                Description
                <input type="text" class="form-control" placeholder="The Movie Description" name="movie[description]">
            </label>
        </div>
        <div class="form-group">
            <label>
                Have you watched it?
                <input type="checkbox" class="checkboxCustom" name="movie[watched]">
            </label>
        </div>
        <input type="submit" class="btn btn-default btn-md" value="submit">
    </form>
</div>

<% include partials/footer %>