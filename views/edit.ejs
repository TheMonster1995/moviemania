<% include partials/header %>

<div class="container">
    <form action="/movies/<%= movie._id %>?_method=PUT" method="POST">
        <div class="form-group">
            <label>
                Title
                <input type="text" class="form-control" placeholder="The Movie Title ..." name="movie[title]" value="<%= movie.title %>">
            </label>
        </div>
        <div class="form-group">
            <label>
                Image Url
                <input type="text" class="form-control" placeholder="The Movie Image Title ..." name="movie[imgURL]" value="<%= movie.imgURL %>">
            </label>
        </div>
        <div class="form-group">
            <label>
                Description
                <input type="text" class="form-control" placeholder="The Movie Description" name="movie[description]" value="<%= movie.description %>">
            </label>
        </div>
        <div class="form-group">
            <label>
                Have you watched it?
                <input type="checkbox" class="checkboxCustom" name="movie[watched]">
            </label>
        </div>
        <input type="submit" class="btn btn-default btn-md" value="Update">
    </form>
</div>

<% include partials/footer %>